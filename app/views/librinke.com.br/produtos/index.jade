extends ../layout

block conteudo
  //
   Banner Start
  .banner.padd
    .container
      //
         Image
      img.img-responsive(src='/librinke/img/crown.png', alt='')
      //
        Heading
      h2.white #{produtos[0].tipo}
      ol.breadcrumb
        li
          a(href='/') In√≠cio
        li
          a(href='/produtos') Produtos
        li.active #{produtos[0].tipo}
      .clearfix
  //
     Banner End
  //
     Inner Content
  .inner-page.padd
      .shopping
        .container
          .shopping-content
            .row
              each produto in produtos
                if produto.imagem
                  .col-md-3.col-sm-6
                    .shopping-item
                      a(href='/produtos/#{produto._id}')
                        img.img-responsive.img-thumbnail(src='#{produto.imagem.url}', alt='')
                      h4.pull-left
                      a(href='/produtos/#{produto._id}') #{produto.titulo}
                      .clearfix
                      p Categoria: #{produto.categoria}

            if paginate.hasPreviousPages || paginate.hasNextPages(pageCount)
                // Pagination
                ul.pagination
                    if paginate.hasPreviousPages
                        li
                            a(href=paginate.href(true)) &laquo;
                        | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                    - var page = 1;
                    while page <= pageCount
                        li
                            a(href=paginate.href({page: page}))
                                | #{page++}
                                span.sr-only (current)
                        | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                    if paginate.hasNextPages(pageCount)
                        li
                            a(href=paginate.href()) &raquo;
                // Pagination end
